<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/layout_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" >

        <com.chatinterface2.CustomChatContainer
            android:id="@+id/chat_block_container"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true" />

        <com.chatinterface2.CustomBlankCell
            android:id="@+id/empty_blank"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_alignBottom="@id/chat_block_container"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/chat_block_container"
            android:layout_toLeftOf="@id/chat_block_container"
            android:background="#00ffffff" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/profile_picture_toggle"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/prof_pic_desc"
        android:paddingTop="10sp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>